

@{
    ViewBag.Title = "Products";
}

@{
    string category = (ViewData["Category"] != null && ViewData["Category"].ToString() != String.Empty) ? ViewData["Category"].ToString() : "";
    string subcategory = (ViewData["SubCategory"] != null && ViewData["SubCategory"].ToString() != String.Empty) ? ViewData["SubCategory"].ToString() : "";
    string search = (ViewData["Search"] != null && ViewData["Search"].ToString() != String.Empty) ? ViewData["Search"].ToString() : "";
    List<MarlinApp.Data.tblProduct> products = ViewBag.Products;
}

@model MarlinApp.Data.tblProduct




<link rel="stylesheet" href="~/Content/ProductList.css" />
<link rel="stylesheet" href="~/Content/bootstrap.css" />

<script type="text/javascript" src="~/Scripts/script.js"></script>



<div class="header-wrapper">
    <img class="card-img-top" style="width: 115px;height: 89px;" src="~/Content/Images/marlin.jpg" />
    <input type="text" placeholder="Search..">
    <button type="submit" class="searchButton"><b>Find</b></button>

</div>


<dl class="dl-horizontal">
    <div class="row product-row">
        <div class="column side">
            <div id="SearchSaveClear" class="product-section">
                <span style="margin-left:10px;font-size:15px;color:grey">Search:</span>
                <div class="SaveClearbutton">
                    <input id="Save" class="btn btn-primary" type="button" value="Save" />
                    <input id="Clear" class="btn btn-danger" type="button" value="Clear" />
                </div>
            </div>
            <div id="ProductProject" class="product-section">
                <input id="Product" class="btn btn-info" type="button" value="Product" />
                <input id="Project" class="btn btn-primary" type="button" value="Project" />
            </div>
            <div id="ProductType" class="product-section">
                <span style="margin-left:0px;font-size:15px;font: bold; color: dimgrey">Product Type:</span>
                <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal" style="float:right;">Search</button>
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header" style="padding: 0px;padding-left:10px;background-color:#786d6d;color:white">
                                <div class="modal-title">Find @subcategory</div>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div style="margin:0px;padding-left:10px;background-color:#f3f2f2;border:1px solid grey">Type</div>


                            <form method="post">
                                <div id="YearSpec" class="product-section">
                                    <span style="margin-left:0px;font-size:15px;font: bold; color: dimgrey">Model Year</span>
                                </div>
                                <div id="ModelYear" class="Property product-section">
                                    <select id="yearSelect" name="year" class="propertyName ProductSelect">
                                        <option value="" selected>Any</option>
                                        <option value="2016">< 2017</option>
                                        <option value="2017">2017</option>
                                        <option value="2018">2018</option>
                                        <option value="2019">2019</option>
                                    </select>
                                </div>
                                <div id="TechSpec" class="product-section">
                                    <span style="margin-left:0px;font-size:15px;font: bold; color: dimgrey">Tech Specification</span>
                                </div>
                                <div id="TechSpecDetail" class="product-section">
                                    <div class="Property">
                                        <span class="PropertyName">Price</span> <br />
                                        <select id="priceSelect" name="price" class="propertyName ProductSelect">
                                            <option value="" selected>Any</option>
                                            <option value="low">$1 - $99</option>
                                            <option value="mid">$100 - $399</option>
                                            <option value="high">$400 - $799</option>
                                            <option value="very-high">$800+</option>
                                        </select>
                                    </div>
                                    <div class="Property">
                                        <span class="PropertyName">Screen Size</span> <br />
                                        <select id="priceSelect" name="screen" class="ProductSelect">
                                            <option value="" selected>Any</option>
                                            <option value="xs">< 19"</option>
                                            <option value="md">19" - 22"</option>
                                            <option value="lg">22" - 27"</option>
                                            <option value="xl">27"+</option>
                                        </select>
                                    </div>
                                    <div class="Property">
                                        <span class="PropertyName">RAM</span> <br />
                                        <select id="ramSelect" name="ram" class="ProductSelect">
                                            <option value="" selected>Any</option>
                                            <option value="4GB">4GB</option>
                                            <option value="8GB">8GB</option>
                                            <option value="16GB">16GB+</option>
                                        </select>
                                    </div>
                                    <div class="Property">
                                        <span class="PropertyName">Operating System</span> <br />
                                        <div id="OSFilter" class="btn-group btn-group-toggle" data-toggle="buttons">
                                            <label class="btn btn-secondary active">
                                                <input type="radio" name="os" id="option1" autocomplete="off" value="" checked> Any
                                            </label>
                                            <label class="btn btn-secondary">
                                                <input type="radio" name="os" id="option2" autocomplete="off" value="Windows"> Windows
                                            </label>
                                            <label class="btn btn-secondary">
                                                <input type="radio" name="os" id="option3" autocomplete="off" value="OS X"> Mac OS
                                            </label>
                                        </div>
                                    </div>
                                    <div class="Property">
                                        <span class="PropertyName">Storage</span> <br />
                                        <select id="storageSelect" name="storage" class="ProductSelect">
                                            <option value="" selected>Any</option>
                                            <option value="250GB">250GB</option>
                                            <option value="500GB">500GB</option>
                                            <option value="1TB">1TB</option>
                                            <option value="2TB">2TB+</option>
                                        </select>
                                    </div>
                                </div>
                                <div id="BrandDetail" class="product-section">
                                    <span style="margin-left:0px;font-size:15px;font: bold; color: dimgrey">Brand</span>
                                </div>
                                <div id="BrandSelectionDetail" class="product-section">
                                    <select id="brandSelect" name="brand" class="ProductSelect">
                                        <option value="" selected>Any</option>
                                        <option value="HP">HP</option>
                                        <option value="Apple">Apple</option>
                                        <option value="Lenovo">Lenovo</option>
                                        <option value="Dell">Dell</option>
                                    </select>
                                </div>
                                <div id="OSDetail" class="product-section">
                                    <span style="margin-left:0px;font-size:15px;font: bold; color: dimgrey">Operating System</span>
                                </div>
                                <div id="Certification" class="product-section">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">Search</button>

                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
            <form method="post">
                <div id="YearSpec" class="product-section">
                    <span style="margin-left:0px;font-size:15px;font: bold; color: dimgrey">Model Year</span>
                </div>
                <div id="ModelYear" class="Property product-section">
                    <select id="yearSelect" name="year" class="propertyName ProductSelect">
                        <option value="" selected>Any</option>
                        <option value="2016">< 2017</option>
                        <option value="2017">2017</option>
                        <option value="2018">2018</option>
                        <option value="2019">2019</option>
                    </select>
                </div>
                <div id="TechSpec" class="product-section">
                    <span style="margin-left:0px;font-size:15px;font: bold; color: dimgrey">Tech Specification</span>
                </div>
                <div id="TechSpecDetail" class="product-section">
                    <div class="Property">
                        <span class="PropertyName">Price</span> <br />
                        <select id="priceSelect" name="price" class="propertyName ProductSelect">
                            <option value="" selected>Any</option>
                            <option value="low">$1 - $99</option>
                            <option value="mid">$100 - $399</option>
                            <option value="high">$400 - $799</option>
                            <option value="very-high">$800+</option>
                        </select>
                    </div>
                    <div class="Property">
                        <span class="PropertyName">Screen Size</span> <br />
                        <select id="priceSelect" name="screen" class="ProductSelect">
                            <option value="" selected>Any</option>
                            <option value="xs">< 19"</option>
                            <option value="md">19" - 22"</option>
                            <option value="lg">22" - 27"</option>
                            <option value="xl">27"+</option>
                        </select>
                    </div>
                    <div class="Property">
                        <span class="PropertyName">RAM</span> <br />
                        <select id="ramSelect" name="ram" class="ProductSelect">
                            <option value="" selected>Any</option>
                            <option value="4GB">4GB</option>
                            <option value="8GB">8GB</option>
                            <option value="16GB">16GB+</option>
                        </select>
                    </div>
                    <div class="Property">
                        <span class="PropertyName">Operating System</span> <br />
                        <div id="OSFilter" class="btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn btn-secondary active">
                                <input type="radio" name="os" id="option1" autocomplete="off" value="" checked> Any
                            </label>
                            <label class="btn btn-secondary">
                                <input type="radio" name="os" id="option2" autocomplete="off" value="Windows"> Windows
                            </label>
                            <label class="btn btn-secondary">
                                <input type="radio" name="os" id="option3" autocomplete="off" value="OS X"> Mac OS
                            </label>
                        </div>
                    </div>
                    <div class="Property">
                        <span class="PropertyName">Storage</span> <br />
                        <select id="storageSelect" name="storage" class="ProductSelect">
                            <option value="" selected>Any</option>
                            <option value="250GB">250GB</option>
                            <option value="500GB">500GB</option>
                            <option value="1TB">1TB</option>
                            <option value="2TB">2TB+</option>
                        </select>
                    </div>
                </div>
                <div id="BrandDetail" class="product-section">
                    <span style="margin-left:0px;font-size:15px;font: bold; color: dimgrey">Brand</span>
                </div>
                <div id="BrandSelectionDetail" class="product-section">
                    <select id="brandSelect" name="brand" class="ProductSelect">
                        <option value="" selected>Any</option>
                        <option value="HP">HP</option>
                        <option value="Apple">Apple</option>
                        <option value="Lenovo">Lenovo</option>
                        <option value="Dell">Dell</option>
                    </select>
                </div>
                <div id="OSDetail" class="product-section">
                    <span style="margin-left:0px;font-size:15px;font: bold; color: dimgrey">Operating System</span>
                </div>
                <div id="Certification" class="product-section">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Search</button>
                </div>
                @if (category != null)
                {
                    <input data-val="true" id="Category_Name" name="Category_Name" type="hidden" value="@category" />
                }
                @if (subcategory != null)
                {
                    <input data-val="true" id="SubCategory_Name" name="SubCategory_Name" type="hidden" value="@subcategory" />
                }
            </form>
        </div>
        <div class="column middle">
            <nav aria-label="breadcrumb" style="padding:10px">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">@category</a></li>
                    <li class="breadcrumb-item"><a href="#">@subcategory</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@search</li>
                </ol>
            </nav>

            @if (ViewBag.Products != null)
            {
                <div class="card-deck d-flex flex-wrap">
                    @foreach (MarlinApp.Data.tblProduct product in ViewBag.Products)
                    {
                        <form method="post" action="ProductSummary">
                            <div class="card product-card" style="min-width: 250px; max-width: 250px;">
                                <img src="~/Content/Images/Products/@product.Product_Image" class="card-img-top" alt="..." style="min-height: 188px; max-height: 188px;">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Product_Name</h5>
                                    <p class="card-text clearfix">
                                        $@product.Price
                                    </p>
                                </div>
                                <input data-val="true" id="Product_ID" name="Product_ID" type="hidden" value="@product.Product_ID" />
                                @Html.HiddenFor(p => p.Product_ID)
                                @if (category != null)
                                {
                                    <input data-val="true" id="Category_Name" name="Category_Name" type="hidden" value="@category" />
                                }
                                @if (subcategory != null)
                                {
                                    <input data-val="true" id="SubCategory_Name" name="SubCategory_Name" type="hidden" value="@subcategory" />
                                }
                                <div class="d-flex justify-content-around">
                                    <input class="compare-input" type="checkbox" name="compare" value="compare">
                                    <label for="compare">Compare</label>
                                    <button type="submit" class="btn btn-outline-info">View Details</button>
                                </div>
                            </div>
                        </form>
                    }

                </div>
                <div class="d-flex justify-content-center">
                    <button id="compareButton" type="submit" class="btn btn-outline-primary btn-block" style="margin-top: 32px; padding-left:32px; padding-right:32px;">
                        Compare
                    </button>
                </div>
            }
            <div id="slider-range" class="price-filter-range" name="rangeInput"></div>
        </div>
    </div>


</dl>